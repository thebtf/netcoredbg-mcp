{
  "mcpServers": {
    "netcoredbg": {
      "command": "uv",
      "args": [
        "run",
        "--project",
        "/path/to/netcoredbg-mcp",
        "netcoredbg-mcp",
        "--project-from-cwd"
      ],
      "env": {
        "NETCOREDBG_PATH": "/path/to/netcoredbg/netcoredbg.exe"
      }
    }
  }
}
